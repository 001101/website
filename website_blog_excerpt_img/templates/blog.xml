<odoo>

    <template id="blog_post_short"
              inherit_id="website_blog.blog_post_short">
        <!-- Entries are Bootstrap rows -->
        <xpath expr="//div[@t-as='blog_post']" position="attributes">
            <attribute name="class">row bg-100 mb32 pb32</attribute>
        </xpath>
        <xpath expr="//h2/.." position="attributes">
            <attribute name="class">col-lg-12 pt32</attribute>
        </xpath>
        <xpath expr="//div[@name='blog_post_data']/.." position="attributes">
            <attribute name="class">text-muted col-8 mb16</attribute>
        </xpath>
        <xpath expr="//h2/.." position="after">
            <h4 t-field="blog_post.subtitle" class="col-lg-12 text-muted mb32"></h4>
        </xpath>

        <!-- Image -->
        <xpath expr="//div[@name='blog_post_data']/.." position="before">
            <t t-set="image_url" t-value="blog_post.main_image()"/>
            <div t-if="image_url" class="excerpt-img col-lg-4">
                <!-- Use cover image if available -->
                <img class="img img-responsive img-thumbnail"
                     t-att-src="image_url"/>
            </div>
        </xpath>
        <!-- Read more button -->
        <xpath expr="//div[@class='o_sharing_links']" position="inside">
        <div class="float-right">
                <a t-attf-href="/blog/#{ slug(blog_post.blog_id) }/post/#{ slug(blog_post) }"
                    class="btn btn-primary o_default_snippet_text">
                    Read more
                </a>
        </div>
        </xpath>
        <xpath expr="//hr" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>

    </template>

</odoo>
